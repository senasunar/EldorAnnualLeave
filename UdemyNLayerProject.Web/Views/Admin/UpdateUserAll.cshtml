@model UpdateAllViewModel
@{
    ViewData["Title"] = "UpdateUserAll";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<div class="row">

    <div class="col-md-4 offset-md-4">
        <h4>Update User</h4>
        <hr />
        <h5>@ViewBag.inform</h5>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                @Html.DropDownList("Id", (IEnumerable<SelectListItem>)ViewBag.User_List, "Select", htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" id="btn_updateUser" value="Update User" class="btn btn-primary" asp-action="UpdateUserPersonal" disabled/>
            </div>
            <div>
                <input type="submit" id="btn_updateRole" value="Update Role" class="btn btn-primary" asp-action="UpdateUserRole" disabled/>
            </div>
            <div>
                <input type="submit" id="btn_updatePass" value="Update Password" class="btn btn-primary" asp-action="UpdateUserPassword" disabled/>
            </div>
        </form>
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function (event) {
        var select = document.getElementById('Id');

        select.addEventListener("change", function () {
            if (select.value == "") {
                document.getElementById('btn_updateUser').disabled = true;
                document.getElementById('btn_updateRole').disabled = true;
                document.getElementById('btn_updatePass').disabled = true;
            } else {
                document.getElementById('btn_updateUser').disabled = false;
                document.getElementById('btn_updateRole').disabled = false;
                document.getElementById('btn_updatePass').disabled = false;
            }
        });
    });
</script>