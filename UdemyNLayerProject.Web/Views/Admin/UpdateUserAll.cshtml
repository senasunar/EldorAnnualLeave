@model UpdateAllViewModel
@{
    ViewData["Title"] = "UpdateUserAll";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<div class="row">

    <div class="col-md-4 offset-md-4">
        <h4>Enter Leave Form</h4>
        <hr />
        <h5>@ViewBag.error</h5>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                @Html.DropDownList("User_List", (IEnumerable<SelectListItem>)ViewBag.User_List, "Select", htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value=" Update User" class="btn btn-primary" asp-action="UpdateUserPersonal" />
                <input type="submit" value=" Update Role" class="btn btn-primary" asp-action="UpdateUserRole" />
                <input type="submit" value=" Update Password" class="btn btn-primary" asp-action="UpdateUserPassword" />
            </div>
        </form>
    </div>
</div>
