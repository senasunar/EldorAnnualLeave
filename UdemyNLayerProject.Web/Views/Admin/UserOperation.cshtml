@model UserOperationViewModel
@{
    ViewData["Title"] = "UserOperation";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<div class="row">

    <div class="col-md-4 offset-md-4">
        <h4>User Operations<h4>
        <hr />
        <h5>@ViewBag.error</h5>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                @Html.DropDownList("Id", (IEnumerable<SelectListItem>)ViewBag.User_List, "Select", htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Delete User" class="btn btn-primary" asp-action="DeleteUser" />
            </div>
            <div>
                <input type="submit" value="Inactive User" class="btn btn-primary" asp-action="InactiveUser" />
            </div>
        </form>
    </div>
</div>
