@model LeaveOperationViewModel
@{
    ViewData["Title"] = "LeaveOperation";
    Layout = "~/Views/Admin/_AdminLayout.cshtml";
}

<div class="row">

    <div class="col-md-4 offset-md-4">
        <h4>Leave Operations<h4>
        <hr />
        <h5>@ViewBag.error</h5>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                @Html.DropDownList("Id", (IEnumerable<SelectListItem>)ViewBag.LeaveType_List, "Select", htmlAttributes: new { @class = "form-control" })
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Delete Leave Type" class="btn btn-primary" asp-action="DeleteLeaveType" id="btn_deleteLeave" disabled/>
            </div>
            <div>
                <input type="submit" value="Inactive Leave Type" class="btn btn-primary" asp-action="InactiveLeaveType" id="btn_inactiveLeave" disabled/>
            </div>
        </form>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function (event) {
        var select = document.getElementById('Id');

        select.addEventListener("change", function () {
            if (select.value == "") {
                document.getElementById('btn_deleteLeave').disabled = true;
                document.getElementById('btn_inactiveLeave').disabled = true;
            } else {
                document.getElementById('btn_deleteLeave').disabled = false;
                document.getElementById('btn_inactiveLeave').disabled = false;
            }
        });
    });
</script>